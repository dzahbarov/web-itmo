<#import "common.ftlh" as c>

<@c.page>
    <div class="datatable">
        <div class="caption">Users</div>
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Handle</th>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>
            <#list users as u>
                <tr>
                    <th>${u.id}</th>
                    <th><@c.userlink u/></th>
                    <th>${u.name}</th>
                </tr>
            </#list>
            </tbody>
        </table>
    </div>
</@c.page>
